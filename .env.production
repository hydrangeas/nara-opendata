# 本番環境設定

NODE_ENV=production
LOG_LEVEL=warn

# 本番環境用の設定
MONITORING_ENDPOINT=https://monitoring.example.com/metrics
BACKUP_SCHEDULE=0 2 * * *

# 本番環境用のCORS設定
CORS_ORIGINS=https://api.example.com,https://app.example.com

# 機能フラグ（本番環境）
FEATURE_API_DOCS_ENABLED=false
FEATURE_HEALTH_CHECK_ENABLED=true
FEATURE_METRICS_ENABLED=true