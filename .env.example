# Supabase Configuration
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Application Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=your-jwt-secret-at-least-32-characters-long

# API Configuration
API_BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:5173

# Rate Limiting (requests per minute)
RATE_LIMIT_TIER1=60
RATE_LIMIT_TIER2=120
RATE_LIMIT_TIER3=300
RATE_LIMIT_WINDOW=60

# Data Directory
DATA_DIRECTORY=./data

# OAuth Providers (optional for local development)
SUPABASE_AUTH_GOOGLE_CLIENT_ID=your-google-client-id
SUPABASE_AUTH_GOOGLE_SECRET=your-google-secret
SUPABASE_AUTH_GITHUB_CLIENT_ID=your-github-client-id
SUPABASE_AUTH_GITHUB_SECRET=your-github-secret

# Vercel Environment (automatically set by Vercel)
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=your-deployment-url.vercel.app
# VERCEL_REGION=iad1